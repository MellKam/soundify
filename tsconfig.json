{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strict": true,
    "declaration": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "types"
  },
  "include": ["./src/"],
  "exclude": ["node_modules", "./src/**/**.test.ts"]
}
