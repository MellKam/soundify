{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":disableRateLimiting",
		"group:all"
	],
	"rebaseWhen": "conflicted",
	"gitAuthor": "Renovate Bot <bot@renovateapp.com>",
	"semanticCommitType": "chore",
	"semanticCommitScope": "dependency",
	"separateMajorMinor": false,
	"lockFileMaintenance": {
		"enabled": true
	},
	"baseBranches": [
		"main"
	],
	"ignorePaths": [
		"**/node_modules/**",
		"**/tests/**"
	]
}
